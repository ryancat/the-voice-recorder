{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    // Add 'es2015.iterable' to the default es5 target libs to support iterable in function generator
    "lib": ["es5", "dom", "scripthost", "es2015.iterable"]
  },
  "include": [
    "src"
  ]
}
